
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.
        * Importante: He desactivado el ActionBar por defecto sustituyendo DarkActionBar por NoActionBar para poder usar un ActionBar personalizado
    -->
    <style name="Theme.Cafesito" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primario</item>
        <item name="colorPrimaryVariant">@color/secundario</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>